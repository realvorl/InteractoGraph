    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['bar'] });
        google.charts.setOnLoadCallback(drawChart);
        function truncateTitle(title) {
            const words = title.split(' ');
            if (words.length > 4) {
                return `${words.slice(0, 3).join(' ')} ... ${words[words.length - 1]}`;
            }
            return title;
        }
        function drawChart() {
            const data = new google.visualization.DataTable();
            data.addColumn('string', 'Article');
            data.addColumn('number', 'Comments');
            data.addColumn('number', 'Reactions');
            const dateIso = json.dateISO;
            // after JSON_PLACEHOLDER is replaced, `json` is a global variable
            json.articles.forEach(article => {
                data.addRow([truncateTitle(article.title), article.commentNo, article.reactionNo]);
            });
            const options = {
                chart: {
                    title: 'Article Interactions',
                    subtitle: `Comments and Reactions on [${json.dateISO}]`,
                },
                bars: 'vertical',
                vAxis: { format: 'decimal' },
                height: 400,
                colors: ['#1b9e77', '#7570b3'],
                hAxis: {
                    title: 'Articles',
                    slantedText: true, // Enable slanting
                    slantedTextAngle: 45 // Adjust to desired angle
                }
            };
            const chart = new google.charts.Bar(document.getElementById('chart_div'));
            chart.draw(data, google.charts.Bar.convertOptions(options));
        }
    </script>
</head>

<body>
    <div id="chart_div"></div>
</body>

</html>
